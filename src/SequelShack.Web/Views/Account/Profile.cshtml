@model AccountProfileModel
@{
  ViewBag.Title = "Account Profile";
}

<div class="row">
  <div class="span12">
    @Html.Partial("_SearchForm")
  </div>
</div>
<h2>Account Profile</h2>
<div class="row">
  <div class="span2">Username:</div>
  <div class="span10"><strong>@Model.Username</strong></div>
</div>
<div class="row">
  <div class="span2">Email:</div>
  <div class="span10"><strong>@Model.Email</strong></div>
</div>
<hr/>
<div class="row">
  <div class="span12">
    <h2>My Sequels</h2>
    <table id="sequels" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Sequel</th>
          <th>Movie</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var sequel in Model.Sequels)
        {
          <tr>
            <td>@sequel.Title</td>
            <td>@Html.ActionLink(string.Format("{0} ({1})", sequel.MovieTitle, sequel.MovieYear), "Show", "Movies", new {id = sequel.MovieId}, new {})</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>